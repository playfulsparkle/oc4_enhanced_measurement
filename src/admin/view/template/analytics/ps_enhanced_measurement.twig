										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_ad_storage" value="0">
											<input type="checkbox" name="analytics_ps_enhanced_measurement_ad_storage" value="1" id="input-ad-storage" class="form-check-input" {% if analytics_ps_enhanced_measurement_ad_storage %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_ad_storage }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-ad-user-data" class="col-sm-2 col-form-label">{{ entry_ad_user_data }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_ad_user_data" value="0">
											<input type="checkbox" name="analytics_ps_enhanced_measurement_ad_user_data" value="1" id="input-ad-user-data" class="form-check-input" {% if analytics_ps_enhanced_measurement_ad_user_data %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_ad_user_data }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-ad-personalization" class="col-sm-2 col-form-label">{{ entry_ad_personalization }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_ad_personalization" value="0">
											<input type="checkbox" name="analytics_ps_enhanced_measurement_ad_personalization" value="1" id="input-ad-personalization" class="form-check-input" {% if analytics_ps_enhanced_measurement_ad_personalization %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_ad_personalization }}</div>
									</div>
								</div>

							</fieldset>

							<fieldset id="analytics-settings-group" class="border p-3 mb-3">
								<legend>{{ text_group_analytics_settings }}</legend>

								<div class="row mb-3">
									<label for="input-analytics-storage" class="col-sm-2 col-form-label">{{ entry_analytics_storage }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_analytics_storage" value="0">
											<input type="checkbox" name="analytics_ps_enhanced_measurement_analytics_storage" value="1" id="input-analytics-storage" class="form-check-input" {% if analytics_ps_enhanced_measurement_analytics_storage %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_analytics_storage }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-functionality-storage" class="col-sm-2 col-form-label">{{ entry_functionality_storage }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_functionality_storage" value="0">
											<input type="checkbox" name="analytics_ps_enhanced_measurement_functionality_storage" value="1" id="input-functionality-storage" class="form-check-input" {% if analytics_ps_enhanced_measurement_functionality_storage %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_functionality_storage }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-personalization-storage" class="col-sm-2 col-form-label">{{ entry_personalization_storage }}</label>
