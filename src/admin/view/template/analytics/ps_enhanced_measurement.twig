{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-analytics" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		{% if enabled_extensions %}
		<div class="alert alert-warning"><i class="fa-solid fa-circle-exclamation"></i> {{ error_analytics_extension }}</div>
		{% endif %}
		<div class="card">
			<div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form id="form-analytics" action="{{ action }}" method="post" data-oc-toggle="ajax">

					<ul class="nav nav-tabs">
						<li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
						<li class="nav-item"><a href="#tab-enhanced-ecommerce-tracking" data-bs-toggle="tab" class="nav-link">{{ tab_enhanced_ecommerce_tracking }}</a></li>
						<li class="nav-item"><a href="#tab-ads-conversion-tracking" data-bs-toggle="tab" class="nav-link">{{ tab_ads_conversion_tracking }}</a></li>
						<li class="nav-item"><a href="#tab-gcm" data-bs-toggle="tab" class="nav-link">{{ tab_gcm }}</a></li>
						<li class="nav-item"><a href="#tab-support" data-bs-toggle="tab" class="nav-link">{{ tab_help_and_support }}</a></li>
					</ul>

					<div class="tab-content">
						<div id="tab-general" class="tab-pane active">

							<div class="row mb-3">
								<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="form-check form-switch form-switch-lg">
										<input type="hidden" name="analytics_ps_enhanced_measurement_status" value="0" />
										<input type="checkbox" name="analytics_ps_enhanced_measurement_status" value="1" class="form-check-input" {% if analytics_ps_enhanced_measurement_status %} checked{% endif %} id="input-status" />
									</div>
								</div>
							</div>

							<fieldset class="border p-3 mb-3">
								<legend>{{ text_store_options_group }}</legend>

								<div class="row mb-3">
									<label for="input-affiliation" class="col-sm-2 col-form-label">{{ entry_affiliation }}</label>
									<div class="col-sm-10">
										<input type="text" name="analytics_ps_enhanced_measurement_affiliation" value="{{ analytics_ps_enhanced_measurement_affiliation }}" placeholder="{{ entry_affiliation }}" id="input-affiliation" class="form-control" />
										<div class="form-text">{{ help_affiliation }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-location-id" class="col-sm-2 col-form-label">{{ entry_location_id }}</label>
									<div class="col-sm-10">
										<input type="text" name="analytics_ps_enhanced_measurement_location_id" value="{{ analytics_ps_enhanced_measurement_location_id }}" placeholder="{{ entry_location_id }}" id="input-location-id" class="form-control" />
										<div class="form-text">{{ help_location_id }}</div>
									</div>
								</div>

							</fieldset>

							<fieldset class="border p-3 mb-3">
								<legend>{{ text_item_options_group }}</legend>

								<div class="row mb-3">
									<label for="input-item-price-tax" class="col-sm-2 col-form-label">{{ entry_item_price_tax }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="analytics_ps_enhanced_measurement_item_price_tax" value="0" />
											<input type="checkbox" name="analytics_ps_enhanced_measurement_item_price_tax" value="1" id="input-item-price-tax" class="form-check-input" {% if analytics_ps_enhanced_measurement_item_price_tax %} checked{% endif %} />
										</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-currency" class="col-sm-2 col-form-label">{{ entry_currency }}</label>
									<div class="col-sm-10">
										<select name="analytics_ps_enhanced_measurement_currency" id="input-currency" class="form-select">
											{% for key, value in currencies %}
												<option value="{{ key }}"{% if key == analytics_ps_enhanced_measurement_currency %} selected{% endif %}>{{ value }}</option>
											{% endfor %}
										</select>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-item-id" class="col-sm-2 col-form-label">{{ entry_item_id }}</label>
									<div class="col-sm-10">
										<select name="analytics_ps_enhanced_measurement_item_id" id="input-item-id" class="form-select">
											{% for key, value in item_id_options %}
												<option value="{{ key }}"{% if key == analytics_ps_enhanced_measurement_item_id %} selected{% endif %}>{{ value }}</option>
											{% endfor %}
										</select>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-item-category-option" class="col-sm-2 col-form-label">{{ entry_item_category_option }}</label>
									<div class="col-sm-10">
										<select name="analytics_ps_enhanced_measurement_item_category_option" id="input-item-category-option" class="form-select">
											{% for key, name in item_category_options %}
												<option value="{{ key }}"{% if key == analytics_ps_enhanced_measurement_item_category_option %} selected{% endif %}>{{ name }}</option>
											{% endfor %}
										</select>
									</div>
								</div>

							</fieldset>

						</div>
						<div id="tab-enhanced-ecommerce-tracking" class="tab-pane">

							<div class="row mb-3">
								<label for="input-measurement-implementation" class="col-sm-2 col-form-label">{{ entry_measurement_implementation }}</label>
								<div class="col-sm-10">
									<select name="analytics_ps_enhanced_measurement_implementation" id="input-measurement-implementation" class="form-select">
										{% for key, name in measurement_implementations %}
											<option value="{{ key }}"{% if key == analytics_ps_enhanced_measurement_implementation %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>

							<ul class="nav nav-tabs">
								<li class="nav-item"><a href="#tab-gtag" data-bs-toggle="tab" class="nav-link{% if analytics_ps_enhanced_measurement_implementation == 'gtag' %} active{% endif %}">{{ tab_gtag }}</a></li>
								<li class="nav-item"><a href="#tab-gtm" data-bs-toggle="tab" class="nav-link{% if analytics_ps_enhanced_measurement_implementation == 'gtm' %} active{% endif %}">{{ tab_gtm }}</a></li>
							</ul>

							<div class="tab-content">
								<div id="tab-gtag" class="tab-pane{% if analytics_ps_enhanced_measurement_implementation == 'gtag' %} active{% endif %}">

									<div class="row mb-3 required">
										<label for="input-google-tag-id" class="col-sm-2 col-form-label">{{ entry_google_tag_id }}</label>
										<div class="col-sm-10">
