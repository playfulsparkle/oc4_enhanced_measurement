												<input type="hidden" name="analytics_ps_enhanced_measurement_debug_global_site_tag" value="0" />
												<input type="checkbox" name="analytics_ps_enhanced_measurement_debug_global_site_tag" value="1" class="form-check-input" {% if analytics_ps_enhanced_measurement_debug_global_site_tag %} checked{% endif %} id="input-debug-global-site-tag" />
											</div>
										</div>
									</div>

								</div>
								<div id="tab-gtm" class="tab-pane{% if analytics_ps_enhanced_measurement_implementation == 'gtm' %} active{% endif %}">

									<div id="group-gtm" class="row mb-3 required">
										<label for="input-gtm-id" class="col-sm-2 col-form-label">{{ entry_gtm_id }}</label>
										<div class="col-sm-10">
											<input type="text" name="analytics_ps_enhanced_measurement_gtm_id" value="{{ analytics_ps_enhanced_measurement_gtm_id }}" placeholder="{{ entry_gtm_id }}" id="input-gtm-id" class="form-control" />
											<div id="error-input-gtm-id" class="invalid-feedback"></div>
											<div class="form-text">{{ help_gtm_id_locate }}</div>
										</div>
									</div>

								</div>
							</div>

							<hr>

							<div id="group-gtm" class="row mb-3">
								<label for="input-tracking-delay" class="col-sm-2 col-form-label">{{ entry_tracking_delay }}</label>
								<div class="col-sm-10">
									<input type="number" min="100" name="analytics_ps_enhanced_measurement_tracking_delay" value="{{ analytics_ps_enhanced_measurement_tracking_delay | default(800) }}" placeholder="{{ entry_tracking_delay }}" id="input-tracking-delay" class="form-control" />
									<div id="error-input-tracking-delay" class="invalid-feedback"></div>
									<div class="form-text">{{ help_tracking_delay }}</div>
								</div>
							</div>

							<div class="row mb-3">
								<label for="input-user-id" class="col-sm-2 col-form-label">{{ entry_user_id }}</label>
								<div class="col-sm-10">
									<div class="form-check form-switch form-switch-lg">
										<input type="hidden" name="analytics_ps_enhanced_measurement_track_user_id" value="0" />
										<input type="checkbox" name="analytics_ps_enhanced_measurement_track_user_id" value="1" class="form-check-input" {% if analytics_ps_enhanced_measurement_track_user_id %} checked{% endif %} id="input-user-id" />
									</div>
									<div class="form-text">{{ help_user_id }}</div>
								</div>
							</div>

							<div class="row mb-3">
								<label for="input-generate-lead" class="col-sm-2 col-form-label">{{ entry_generate_lead }}</label>
								<div class="col-sm-10">
