{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-analytics" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form id="form-analytics" action="{{ action }}" method="post" data-oc-toggle="ajax">

					<ul class="nav nav-tabs">
						<li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
						<li class="nav-item"><a href="#tab-support" data-bs-toggle="tab" class="nav-link">{{ tab_help_and_support }}</a></li>
					</ul>

					<div class="tab-content">
						<div id="tab-general" class="tab-pane active">

							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="form-check form-switch form-switch-lg">
										<input type="hidden" name="analytics_ps_enhanced_measurement_status" value="0" />
										<input type="checkbox" name="analytics_ps_enhanced_measurement_status" value="1" class="form-check-input" {% if analytics_ps_enhanced_measurement_status %} checked{% endif %} id="input-status" />
									</div>
								</div>
							</div>

						</div>
						<div id="tab-support" class="tab-pane">
							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr />
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr />
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr />
							<h2>{{ heading_fix }}</h2>
							<div class="row mb-3">
								<div class="col-sm-10">
									<button type="button" data-fix-action="{{ fix_event_handler }}" data-bs-toggle="tooltip" title="{{ button_fix_event_handler }}" class="btn btn-primary"><i class="fa-solid fa-gear"></i> {{ button_fix_event_handler }}</button>
								</div>
							</div>
							<hr />
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr />
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}
						</div>

					</div>

					<input type="hidden" name="store_id" value="{{ store_id }}">
				</form>
			</div>
		</div>
	</div>
</div>
<script>

	var inputs = $('#ad-settings-group input[type="checkbox"], #analytics-settings-group input[type="checkbox"], #security-settings-group input[type="checkbox"]');

	$('#input-gcm-profiles').on('change', function () {
		inputs.prop('checked', false);

		var selectedValue = $(this).val();

		if (selectedValue === '1') { // Strict
			$('#input-functionality-storage').prop('checked', true);
			$('#input-personalization-storage').prop('checked', true);
			$('#input-security-storage').prop('checked', true);
		} else if (selectedValue === '2') { // Balanced
			$('#input-ad-storage').prop('checked', true);
			$('#input-ad-user-data').prop('checked', true);
			$('#input-analytics-storage').prop('checked', true);
			$('#input-functionality-storage').prop('checked', true);
			$('#input-personalization-storage').prop('checked', true);
			$('#input-security-storage').prop('checked', true);
		}
	});

	inputs.on('change', function () {
		$('#input-gcm-profiles option:first').prop('selected', true);
	});

	$('button[data-fix-action]').on('click', function() {
		var $this = $(this);
		var action = $(this).data('fix-action');

		$.ajax({
			url: action,
			dataType: 'json',
			beforeSend: function () {
				$($this).button('loading');
			},
			complete: function () {
				$($this).button('reset');
			},
			success: function (json) {
				$('.alert-dismissible').remove();

				if (json['error']) {
					$('#alert').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> ' + json['error'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
				}

				if (json['success']) {
					$('#alert').prepend('<div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-check"></i> ' + json['success'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
				}
			},
			error: function (xhr, ajaxOptions, thrownError) {
				console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	});
</script>
